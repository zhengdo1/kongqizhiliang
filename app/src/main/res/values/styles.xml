<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/colorPrimary</item>-->
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <!--<item name="actionMenuTextAppearance">@style/MenuTextStyle</item>-->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- ToolBar菜单样式 -->
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->

    </style>

    <!-- ToolBar菜单样式 -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">14sp</item> <!--  搞掂字体大小-->
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

    </style>


    //“问题”部分对应的style文件

    <style name="leftQuestionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/sub_text_black</item>
    </style>

    //“答案”部分对应的style文件

    <style name="rightAnswerStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/activity_right_margin</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
    </style>

    //左侧问题右侧答案外层linearlayout对应的style文件

    <style name="leftQuestionRightAnswerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    //调整relativelayout“问题”部分对应的style文件

    <style name="relativeLeftQuestionStyle">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/sub_text_black</item>
    </style>
    //调整relativelayout“答案”部分对应的style文件

    <style name="relativeRightAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/activity_right_margin</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="leftQuestionRightAnswerLayoutStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //调整relativelayout“问题”部分对应的style文件

    <style name="relativeLeftQuestionStyle2">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/sub_text_black</item>
    </style>
    //调整relativelayout“答案”部分对应的style文件

    <style name="relativeRightAnswerStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    //排口列表页面右箭头的style

    <style name="portListRightArrowStyle">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="datalistItem1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:padding">2px</item>-->
    </style>

    <style name="timeSelectStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">2dp</item>
    </style>

    //页面底端单个button样式

    <style name="ButtonNormalStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_state</item>
    </style>
</resources>
